float4 qmult(_WclProgramAllocations *_wcl_allocs,  float4 q1, float4 q2 )
{
    float4 r;
    float3 t;

    float3 q1yzw = (float3)(q1.y, q1.z, q1.w);
    float3 q2yzw = (float3)(q2.y, q2.z, q2.w);
    float3 c = cross( q1yzw, q2yzw );

    t = q2yzw * q1.x + q1yzw * q2.x + c;
    r.x = q1.x * q2.x - dot( q1yzw, q2yzw );
    r.yzw = t.xyz;

    return r;
}

float4 qsqr(_WclProgramAllocations *_wcl_allocs,  float4 q )
{
    float4 r;
    float3 t;

    float3 qyzw = (float3)(q.y, q.z, q.w);

    t = 2.0f * q.x * qyzw;
    r.x = q.x * q.x - dot( qyzw, qyzw );
    r.yzw = t.xyz;

    return r;
}

