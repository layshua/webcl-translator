float4
RaytraceQJulia(_WclProgramAllocations *_wcl_allocs, 
    float3 rO,
    float3 rD,
    float4 mu,
    float epsilon,
    float3 eye,
    float3 light,
    float3 diffuse,
    float radius,
    bool shadows,
    int iterations )
{
    const float4 background = (float4)( 0.15f, 0.15f, 0.15f, 0.0f );
    float4 color = background;

    rD = fast_normalize( rD );
    float t = IntersectSphere(_wcl_allocs,  rO, rD, radius );
    if ( t <= 0.0f )
        return color;

    rO += rD * t;
    float4 hit = IntersectQJulia(_wcl_allocs,  rO, rD, mu, epsilon, ((2.0f) * 1.5f) );
    float dist = hit.w;
    if (dist >= epsilon)
        return color;

    rO.xyz = hit.xyz;
    float3 normal = EstimateNormalQJulia(_wcl_allocs,  rO, mu, iterations );

    float3 rgb = Phong(_wcl_allocs,  light, rD, rO, normal, diffuse );
    color.xyz = rgb.xyz;
    color.w = 1.0f;

    if ((0))
    {
        float3 light_dir = fast_normalize( light - rO );
        rO += normal * epsilon * 2.0f;
        hit = IntersectQJulia(_wcl_allocs,  rO, light_dir, mu, epsilon, ((2.0f) * 1.5f) );
        dist = hit.w;
        color.xyz *= (dist < epsilon) ? (0.4f) : (1.0f);
    }

    return color;
}

