    (*(_wcl_addr_clamp_global_2__u_uglobal__float__Ptr((d_Result)+(tid), 1, (__global float *)_wcl_allocs->gl.reduce__d_Result_min, (__global float *)_wcl_allocs->gl.reduce__d_Result_max, (__global float *)_wcl_allocs->gl.reduce__d_Input_min, (__global float *)_wcl_allocs->gl.reduce__d_Input_max, (__global float *)_wcl_allocs->gn))) = sum;
