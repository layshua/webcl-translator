void _wcl_write_imagef_1(write_only image2d_t arg0, int2 arg1, float4 arg2)
{
    int2 size = get_image_dim(arg0);
    if (arg1.x >= 0 && arg1.y >= 0 && arg1.x < size.x && arg1.y < size.y)
        write_imagef(arg0, arg1, arg2);
}
